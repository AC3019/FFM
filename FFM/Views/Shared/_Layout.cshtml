<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FFM</title>
    <script src="https://kit.fontawesome.com/82adc751c2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel=”stylesheet” href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FFM.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FFM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
		<div class="footer-descr">
            <span>FFM</span>
            <span>Fresh Foods,</span>
            <span>Healthier Living</span>
        </div>
		<div>
			<span>INFORMATION</span>
			<div>
                <span class="material-symbols-outlined">
                    chevron_right
                </span>
				<span>Terms & Conditions</span>
            </div>
            <div>
                <span class="material-symbols-outlined">
                    chevron_right
                </span>
                <span>FFM FAQ</span>
            </div>
        </div>
		<div>
			<span>CONTACT US</span>
			<div>
                <span class="material-symbols-outlined">
                    call
                </span>
				<span>+604-1234567</span>
            </div>
			<div>
				<a href="#">
                    <span class="material-symbols-outlined">
                        mail
                    </span>
				    <span>ffm@gmail.com</span>
                </a>
            </div>
        </div>
		<div>
			<span>FOLLOW US ON</span>
			<div>
				<div>
                    <i class="fab fa-facebook-square"></i>
                    <span>FFM Fresh Foods</span>
                </div>
				<div>
                    <a href="#">
                        <i class="fab fa-telegram"></i>
                        <span>FFM Fresh Foods</span>
                    </a>
                </div>
				<div>
                    <i class="fab fa-instagram-square"></i>
                    <span>FFM Fresh Foods</span>
                </div>
            </div>
        </div>
		<div class="footer-comment">
			<span>LEAVE YOUR FEEDBACK</span>
			<span>TO LET US SERVE YOU BETTER</span>
			<div>
				<form action="/" method="post">
					<div class="genericInputField">
						<label>Email</label>
						<input type="text" value="" />
                    </div>
					<div class="genericInputField">
						<label>Feedback</label>
						<textarea name="feedback" cols="20" rows="5"></textarea>
                    </div>
					<div class="line"></div>
					<div>
						<input type="submit" value="SUBMIT" class="btnPrimary"/>
                    </div>
                </form>
            </div>
        </div>
        @* <div class="container">
            &copy; 2024 - FFM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div> *@
    </footer>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
