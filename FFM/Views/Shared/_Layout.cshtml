<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FFM</title>
    <script src="https://kit.fontawesome.com/82adc751c2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel=”stylesheet” href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FFM.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="border-bottom box-shadow">
            <div class="welcome">
				<span>Welcome, Username</span>
                @* will be replace by login and sign up button if not logged in *@
            </div>
			<div class="header">
                <div class="header-content">
                    <div class="">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="icon">
                            <h1>FFM</h1>
                        </a>
                    </div>

                    <div class="icon search">
                        <span class="material-symbols-outlined searchIcon">
                            search
                        </span>
                        <input type="text" name="item" value="" class="searchTextBox" placeholder="Search Item" />
                        <div>
                            <input type="submit" name="" value="Search" class="btnPrimary searchBtn" />
                        </div>
                    </div>
                </div>
				<div class="header-icon">
                    <a asp-area="" asp-controller="" asp-action="" class="icon">
                        <span>Shopping Cart</span>
                        <span class="material-symbols-outlined">
                            shopping_cart
                        </span>
                    </a>
                    <a asp-area="" asp-controller="" asp-action="" class="icon">
                        <span class="material-symbols-outlined">
                            history
                        </span>
                    </a>
                    <a asp-area="" asp-controller="Home" asp-action="cusPersonalInfo" class="icon">
                        <span class="material-symbols-outlined">
                            account_circle
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
		<div class="footer-content">
            <div class="footer-descr">
                <h1>FFM</h1>
                <span>Fresh Foods,</span>
                <span>Healthier Living</span>
            </div>
            <div class="footer-info">
                <span>INFORMATION</span>
                <div class="footer-spacing">
                    <a asp-area="" asp-controller="" asp-action="" class="icon">
                        <span class="material-symbols-outlined">
                            chevron_right
                        </span>
                        Terms & Conditions
                    </a>
                </div>
                <div class="footer-spacing">
                    <a asp-area="" asp-controller="" asp-action="" class="icon">
                        <span class="material-symbols-outlined">
                            chevron_right   
                        </span>
                        FFM FAQ
                    </a>
                </div>
            </div>
            <div class="footer-contact">
                <span>CONTACT US</span>
                <div class="footer-spacing">
                    <a asp-area="" asp-controller="" asp-action="" class="icon" >
                        <span class="material-symbols-outlined">
                            call
                        </span>
                        +604-1234567
                    </a>
                </div>
                <div class="footer-spacing">
                    <a asp-area="" asp-controller="" asp-action="" class="icon" >
                        <span class="material-symbols-outlined">
                            mail
                        </span>
                        ffm@gmail.com
                    </a>
                </div>
            </div>
            <div class="footer-social">
                <span>FOLLOW US ON</span>
                <div>
                    <div class="footer-spacing">
                        <a asp-area="" asp-controller="" asp-action="" class="icon">
                            <i class="fab fa-facebook-square"></i>
                            FFM Fresh Foods
                        </a>
                    </div>
                    <div class="footer-spacing">
                        <a asp-area="" asp-controller="" asp-action="" class="icon">
                            <i class="fab fa-telegram"></i>
                            FFM Fresh Foods
                        </a>
                    </div>
                    <div class="footer-spacing">
                        <a asp-area="" asp-controller="" asp-action="" class="icon">
                            <i class="fab fa-instagram-square"></i>
                            FFM Fresh Foods
                        </a>
                    </div>
                </div>
            </div>
            <div class="footer-comment">
                <span>LEAVE YOUR FEEDBACK</span>
                <span>TO LET US SERVE YOU BETTER</span>
                <div>
                    <form action="/" method="post">
                        <div class="genericInputField footer-form">
                            <label>Email</label>
                            <input type="text" value="" />
                        </div>
                        <div class="genericInputField footer-form">
                            <label>Feedback</label>
                            <textarea name="feedback" cols="30" rows="5"></textarea>
                        </div>
                        <div class="line"></div>
                        <div class="submitBtn">
                            <input type="submit" value="SUBMIT" class="btnPrimary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <p class="copyright">&copy; 2024, Fresh Food Market. All Rights Reserved</p>
        @* <div class="container">
            &copy; 2024 - FFM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div> *@
    </footer>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
