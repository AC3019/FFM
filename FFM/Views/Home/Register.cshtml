
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>
<body>
    <div class="content">
        <h3>Create your first FFM account.</h3>
        <div class="">
            <h1>REGISTER</h1>
            <div class="line"></div>
            <form action="" method="post">
                <div class="genericInputField">
                    <label>Email Address</label>
                    <input type="text" name="email" value="" placeholder="example@gmail.com" />
                </div>
                <div class="genericInputField i">
                    <label>Password</label>
                    <input type="password" name="password" value="" />
                </div>
                <div>
                    <input type="submit" name="name" value="LOGIN" class="btnPrimary" />
                </div>
            </form>
            <div class="">
                <span>Already have an account?</span>
                <a asp-area="" asp-controller="Home" asp-action="Login" class="icon">
                    <span>Click Here</span>
                </a>
            </div>
        </div>
    </div>
</body>
</html>

