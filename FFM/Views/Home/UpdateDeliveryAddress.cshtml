
@{
    ViewData["Title"] = "UpdateDeliveryAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/updateDeliveryAddress.css" asp-append-version="true" />
</head>
<body>
    <div class="content">
        <h3>Update Delivery Address Information</h3>
        <div class="form">
            <div class="form-header icon">
                <a asp-area="" asp-controller="Home" asp-action="cusPersonalInfo" class="icon">
                    <span class="material-symbols-outlined">
                        close
                    </span>
                </a>
                <h1>UPDATE DELIVERY ADDRESS</h1>
                @* add to make it display center *@
				<div></div>
            </div>
            <div class="line"></div>
            <form action="" method="post">
				<div class="form-content">
                    <div>
                        <div class="genericInputField input">
                            <label>Address Line 1</label>
                            <input type="text" name="" value="" />
                        </div>
                        <div class="genericInputField input">
                            <label>Address Line 2 (Optinal)</label>
                            <input type="text" name="" value="" />
                        </div>
                    </div>
                    <div>
                        <div class="input-address">
                            <div class="genericInputField input">
                                <label>Post Code</label>
                                <input type="text" name="" value="" />
                            </div><div class="genericInputField input">
                                <label>Area</label>
                                <input type="text" name="" value="" />
                            </div>
                        </div>
                        <div class="genericInputField input">
                            <label>State</label>
                            <input type="text" name="" value="" />
                        </div>
                    </div>
                </div>
                <div>
                    <input type="submit" name="name" value="UPDATE" class="btnPrimary btnUpdate" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>

