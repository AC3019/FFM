
@{
    ViewData["Title"] = "CusUpdateAccountInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/cusUpdateAccountInfo.css" asp-append-version="true" />
</head>
<body>
    <div class="content">
        <h3>Update Personal Account Information</h3>
        <div class="form">
            <div class="form-header icon">
                <a asp-area="" asp-controller="Home" asp-action="cusPersonalInfo" class="icon">
                    <span class="material-symbols-outlined">
                        close
                    </span>
                </a>
                <h1>UPDATE ACCOUNT INFO</h1>
                @* add to make it display center *@
				<div></div> 
            </div>
            <div class="line"></div>
            <form action="" method="post">
                <div class="form-content">
                    <div>
                        <div class="genericInputField input">
                            <label>Username</label>
                            <input type="text" name="" value="" />
                        </div>
                        <div class="genericInputField input">
                            <label>Phone Number</label>
                            <input type="text" name="" value="" />
                        </div>
                    </div>
                    <div>
                        <div class="genericInputField input">
                            <label>Email Address</label>
                            <input type="text" name="" value="" />
                        </div>
                        <div class="genericInputField input">
                            <label>Password</label>
                            <input type="text" name="" value="" />
                        </div>
                    </div>
                </div>
                <div>
                    <input type="submit" name="name" value="UPDATE" class="btnPrimary btnUpdate" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
